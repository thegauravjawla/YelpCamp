<%- include("partials/header") %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked camps around the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col col-lg-3 col-sm-6">
                <div class="img-thumbnail img-fluid" >
                    <img src="<%= campground.image %>" style="width:100%; height:150px;" alt="Generic camp ground image">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                </div>
            </div>
        <%}) %>
    </div>
    
</div>

<%- include("partials/footer") %>